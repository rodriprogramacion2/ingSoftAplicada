<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	<property name="locations" value="classpath:parametros.properties"></property>
</bean>

<import resource="classpath:datasource.xml"/>

	<bean id="log4jInitializer" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="staticMethod">
			<value>org.springframework.util.Log4jConfigurer.initLogging</value>
		</property>
		<property name="arguments">
			<list>
				<value>classpath:log4j.xml</value>
			</list>
		</property>
	</bean>


<!-- /////////////////////////////////DAO///////////////////////////////////  -->

<bean id="publicationDao" class="ar.edu.um.isa.dao.PublicationMysqlDao">
	<property name="jdbcTemplate" ref="jdbcTemplate" />
</bean>

<bean id="publisherDao" class="ar.edu.um.isa.dao.PublisherMysqlDao">
	<property name="jdbcTemplate" ref="jdbcTemplate" />
</bean>

<bean id="tagDao" class="ar.edu.um.isa.dao.TagMysqlDao">
	<property name="jdbcTemplate" ref="jdbcTemplate" />
</bean>

<!-- /////////////////////////////////MANAGERS////////////////////////////////// -->

<bean id="microbloggingManager" class="ar.edu.um.isa.manager.MicrobloggingManager">
	<property name="publicationDao" ref="publicationDao"></property>
</bean>
<bean id="publisherManager" class="ar.edu.um.isa.manager.PublisherManager">
	<property name="publisherDao" ref="publisherDao"></property>
</bean>
<bean id="tagManager" class="ar.edu.um.isa.manager.TagManager">
	<property name="tagDao" ref="tagDao"></property>
</bean>

<!-- //////////////////////////////////FACADE////////////////////////////////// -->

<bean id="microbloggingFacade" class="ar.edu.um.isa.facade.MicrobloggingFacade">
	<property name="microbloggingManager" ref="microbloggingManager" />
	<property name="tagManager" ref="tagManager" />
	<property name="publisherManager" ref="publisherManager" />
</bean>


</beans>
